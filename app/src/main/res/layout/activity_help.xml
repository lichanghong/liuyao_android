<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
   >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/app_color"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/help_back_btn"
            android:background="@drawable/backbutton2x"
            android:layout_marginLeft="12dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/tv_chat_title"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:text="使用帮助"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1，摇卦法"
            android:textColor="@color/app_color"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摇卦时请集中精神！心中想着所问之事，使用三个铜钱或硬币在手中摇动，然后抛向空中，铜钱/硬币无字的一面叫做“背”或叫“反”，本程序点击开始起卦按钮之后，会弹出六个：“两反一正”、“两正一反”、“三个正”、“三个反”的选项，根据你的结果选择，共摇６次成卦。最后点击确定按钮即可完成起卦。"
            android:textColor="@color/help_text_color"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2，程序使用方式"
            android:textColor="@color/app_color"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首先需要选择性别（男、女），然后写上自己所要问的事情，一卦一问，不可求多个问题。其次设定起卦时间，默认是当前时间，点击时间可以修改。最后，确定写入的时间是否正确，如果确定没问题就点击开始起卦，此时会弹出一卦界面，一共六个爻对应着你六次摇卦结果。比如第一次摇卦结果是三个反，那就在第一爻处选择三个反，以此类推。"
            android:textColor="@color/help_text_color"
            />
    </LinearLayout>

</LinearLayout>
